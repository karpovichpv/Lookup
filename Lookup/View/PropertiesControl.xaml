<UserControl
    x:Class="Lookup.View.PropertiesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lookup.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" MaxWidth="300" />
            <ColumnDefinition Width="2*" MaxWidth="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Content="Name" />
        <Label
            Grid.Row="0"
            Grid.Column="1"
            Content="Value" />

        <Label
            Grid.Row="0"
            Grid.Column="2"
            Content="Type" />

        <ListView
            Grid.Row="1"
            Grid.ColumnSpan="3"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            ItemsSource="{Binding PropertyObjects}">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MaxWidth="300" />

                            <ColumnDefinition Width="2*" MaxWidth="200"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border
                            Grid.Row="0"
                            Grid.Column="0"
                            Style="{StaticResource UDAReportPropertiesBorder}">
                            <TextBox Style="{StaticResource UDAReportPropertiesTextBox}" Text="{Binding CurrentName}" />
                        </Border>

                        <Border
                            Grid.Row="0"
                            Grid.Column="1"
                            Style="{StaticResource UDAReportPropertiesBorder}">
                            <TextBox
                                BorderThickness="0"
                                IsReadOnly="true"
                                Style="{StaticResource UDAReportPropertiesTextBox}"
                                Text="{Binding CurrentValue}" />
                        </Border>

                        <Border
                            Grid.Row="0"
                            Grid.Column="2"
                            Style="{StaticResource UDAReportPropertiesBorder}">
                            <TextBox
                                BorderThickness="0"
                                IsReadOnly="true"
                                Style="{StaticResource UDAReportPropertiesTextBox}"
                                Text="{Binding Type}" />
                        </Border>
                    </Grid>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</UserControl>
