<UserControl x:Class="Lookup.View.DynamicStringProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lookup.View"
             mc:Ignorable="d" 
             DataContext="{Binding Source={StaticResource locator}, Path=UserPropertiesViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <ListView Name="lb" Width="Auto" Padding="0" HorizontalContentAlignment="Stretch" ItemsSource="{Binding UDAObjects}">
        <ListView.ItemTemplate>
            <DataTemplate>
        <Grid x:Name="grid" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <TextBox  MinWidth="200" Grid.Column="0" Text="{Binding Name, Mode=TwoWay}"></TextBox>
            <TextBox  Grid.Column="1" Text="{Binding Value, Mode=TwoWay}"></TextBox>
        </Grid>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
