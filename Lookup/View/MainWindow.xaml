<Window
    x:Class="Lookup.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="clr-namespace:Lookup.ViewModel"
    xmlns:ia="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Lookup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:Lookup.View"
    Title="{Binding Version}"
    MinWidth="200"
    MinHeight="500"
    MaxWidth="800"
    MaxHeight="700"
    ResizeMode="CanResize"
    Topmost="True"
    mc:Ignorable="d">

    <ia:Interaction.Triggers>
        <ia:EventTrigger EventName="Loaded">
            <ia:InvokeCommandAction Command="{Binding WindowLoad}" />
        </ia:EventTrigger>
    </ia:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" VerticalAlignment="Stretch">
            <TabItem Header="Main">
                <uc:MainTabControl />
            </TabItem>
            <TabItem x:Name="tbiUserProperties" Header="User-properties">
                <uc:UserPropertiesControl DataContext="{Binding Source={StaticResource locator}, Path=UserPropertiesViewModel}" />
            </TabItem>
            <TabItem Header="Dynamic String Properties">
                <uc:DynamicStringProperties />
            </TabItem>
        </TabControl>
        <uc:FooterButtons
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom" />
    </Grid>
</Window>
